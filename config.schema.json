{
  "pluginAlias": "SolisSensors",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "keyId": {
        "title": "ID key",
        "type": "string",
        "required": true,
        "default": ""
      },
      "keySecret": {
        "title": "Secret key",
        "type": "string",
        "required": true,
        "default": ""
      },
      "stationId": {
        "title": "Station ID",
        "type": "string",
        "required": true,
        "default": ""
      },
      "batterySensor": {
        "title": "Enable battery sensor",
        "type": "boolean",
        "required": true,
        "default": true
      },
      "solarSensor": {
        "title": "Enable solar sensor",
        "type": "boolean",
        "required": true,
        "default": true
      },
      "netSensor": {
        "title": "Enable net usage sensor",
        "type": "boolean",
        "required": true,
        "default": true
      },
      "loadSensor": {
        "title": "Enable total load sensor",
        "type": "boolean",
        "required": true,
        "default": true
      },
      "multiplier": {
        "title": "A multiplier number for the sensors. As a sensor uses lux as a unit, you can multiply it to get a more useful unit that you can use in your automation.",
        "type": "number",
        "required": false,
        "default": 1
      }
    }
  }
}